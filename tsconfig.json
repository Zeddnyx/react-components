{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false, // disable error unused variable or import file
    "useUnknownInCatchVariables": false, // disable error unknown catch variable (error is type of unknown)
    "noUnusedParameters": false, // disable error unused parameter
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "pages/*": ["./pages/*"],
      "assets/*": ["./assets/*"],
      "style/*": ["./style/*"],
      "components/*": ["./components/*"],
      "routes/*": ["./routes/*"],
      "hooks/*": ["./hooks/*"],
      "configs/*": ["./configs/*"],
      "utils/*": ["./utils/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
